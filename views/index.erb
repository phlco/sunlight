<h1>Search for Legislator by Zipcode</h1>

<!-- Searches should be get requests so that you can bookmark it -->
<form action="/search" method="get">
  <label for="zipcode">Enter a Zipcode</label>
  <input type="text" name="zipcode" autofocus>
  <button>Search</button>
</form>

<h2>Saved Faves</h2>
<!-- display all politicians saved to the database -->
<ul>
    <% @faves.each do |fave| %>
    <li><%= fave.firstname %></li>
    <li><%= fave.lastname %></li>
    <li><%= fave.party %></li>
    <li><%= fave.phone %></li>
    <li><%= fave.state %></li>
    <li><%= fave.twitter_id %></li>
    <li><%= fave.in_office %></li>
    <% end %>
</ul>


