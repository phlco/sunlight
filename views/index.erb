<div class="search"><h1>Search by Zipcode</h1>
<form action="/display" method="get">
  Zipcode: <input type="search" name="zipcode" />
  <button>Search</button>
</form>
</div>

<div class="favorites">
  <h1>Favorite Legislators</h1>
  <% @legislators.each do |legislator| %>
  <ul>
    <li><%= legislator['firstname'] %> <%= legislator['lastname'] %></li>
    <li><%= legislator['party'] %></li>
    <li><%= legislator['phone'] %></li>
    <li><%= legislator['twitter_id'] %></li>
    <li><%= legislator['state'] %></li>
    <li><%= legislator['in_office'] %></li>
    <li><%= legislator['votesmart_id'] %></li>
  </ul>
      <% end %>
</div>

